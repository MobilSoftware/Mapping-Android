<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadPicturesActivity"
    >

    <Button
        android:id="@+id/btn_start_select_picture"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="打开图片选择" />
  <Button
        android:id="@+id/btn_start_upload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="开始上传到阿里雲" />
    <Button
        android:visibility="gone"
        android:id="@+id/btn_upload_parse_server"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="开始上传ParseServer"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="原图参数" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/file_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <TextView
            android:id="@+id/image_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivSrc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="压缩后参数" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thumb_file_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <TextView
            android:id="@+id/thumb_image_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivCompress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
